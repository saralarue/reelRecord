<%- include('partials/header') -%>

<section>
    <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
    <div class="" alert alert-info"><%= el.msg %></div>
    <% }) %> <% } %> <% if (locals.messages.info) { %> <%
            messages.info.forEach( el => { %>
    <div class="alert alert-info"><%= el.msg %></div>
    <% }) %> <% } %>

    <div class="hero-body">
        <div class="container">
            <div class="columns is-centered">
                <div class="is-5-tablet is-4-desktop is-3-widescreen">

                    <form action="/login" method="POST" class="box" id="loginContainer">
                        <!-- email  -->
                        <div class="field">
                            <label for="exampleInputEmail1" class="label">Email</label>
                            <div class="control has-icons-left">
                                <input type="email" placeholder="e.g. bobsmith@gmail.com" class="input" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" required>
                                <span class="icon is-small is-left">
                                    <i class="fa fa-envelope"></i>
                                </span>
                            </div>
                        </div>

                        <!-- password  -->
                        <div class="field">
                            <label for="exampleInputPassword1" class="label">Password</label>
                            <div class="control has-icons-left">
                                <input type="password" placeholder="*******" class="input" id="exampleInputPassword1" name="password" required>
                                <span class="icon is-small is-left">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </div>
                        </div>

                        <!-- submit button  -->
                        <div class="field loginAndSignupDiv">
                            <button class="button is-success signupBtn" type="submit">Submit</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer') -%>
